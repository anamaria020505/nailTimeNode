{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "controllers/**/*",
    "models/**/*",
    "routes/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
